---
main_header: true
---

<div class="home-links row">
  <%= partial "partials/home_link", :locals => { :link => "brochure", :image => "news/brochure.jpg", :title => "Scarica il PDF del programma" } %>
  <%= partial "partials/home_link", :locals => { :link => "mappa", :image => "news/mappa.jpg", :title => "Vai alla mappa" } %>
  <%= partial "partials/home_link", :locals => { :link => "/foto.html", :image => "news/foto.jpg", :title => "Guarda le foto del festival" } %>
</div>
<div id="news" class="row">
  <div class="news-container col-xs-12 col-sm-12 col-md-12">
    <div class="heading">News</div>
    <% get_md_files("data/news").reverse_each do |name| %>
    <% data = get_data("news", name) %>
      <% data["id"] = name %>
      <%= partial "partials/news", :locals => { :data => data, :summary => true } %>
    <% end %>
  </div>
</div>
